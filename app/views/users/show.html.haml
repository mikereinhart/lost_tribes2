.row
  .large-12.columns
    %h2
      - if user_signed_in?
        #{@user.name}
    %br
    %h3 
      Your Events:
    %br
      %table#events
        %thead
          %tr
            %th
              Title
            %th
              Date
            %th 
              City
            %th 
              State
            %th
              Delete
        %tbody
          - @user.events.each do |event|
            %tr
              %td
                = event.title
              %td
                = event.date
              %td
                = event.city
              %td
                = event.state
              %td
                = link_to 'Delete', '#', class: 'event-delete'
    %h3
      Your Info: 
      =link_to 'Edit', edit_user_path(@user)
    Name: #{@user.name}
    %br
    Email: #{@user.email}
    %br
    Phone Number: #{@user.phone_number}
    %br
    Address: #{@user.street_address}
    %br
    Address 2: #{@user.street_address_2}
    %br
    City: #{@user.city}
    %br
    State: #{@user.state}
    %br
    Zip Code: #{@user.zip}
    %br