.row
  .large-12.columns
    %h1
      - if user_signed_in?
        Hi, #{@user.name.capitalize}! 
    %br
    %h3 
      Your Events:
    %br
      %table#events
        %thead
          %tr
            %th
              Title
            %th
              Date
            %th 
              City
            %th 
              State
            / %th
            /   Delete
        %tbody
          - @user.events.each do |event|
            %tr
              %td
                = event.title
              %td
                = event.date
              %td
                = event.city
              %td
                = event.state
              / %td
              /   = link_to 'Delete', '#', class: 'event-delete'
    %h3
      =link_to 'Edit', edit_user_path(@user)
      Your Info