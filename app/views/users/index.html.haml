- if current_user.admin?
  .row
    .large-12.columns
      %h1 Users
    .large-3.columns
      = form_for @user do |f|
        = f.text_field :name, placeholder: 'Name'
        = f.text_field :email, placeholder: 'Email'
        = f.text_field :password, placeholder: 'Password'
        = f.text_field :phone_number, placeholder: 'Phone Number'
        = f.text_field :street_address, placeholder: 'Address'
        = f.text_field :street_address_2, placeholder: 'Address 2'
        = f.text_field :city, placeholder: 'City'
        = f.text_field :state, placeholder: 'State'
        = f.text_field :zip, placeholder: 'Zip Code'
        %br
        = f.label :vendor
        = f.text_field :vendor, placeholder: 'Vendor (true or false)'
        = f.label :admin
        = f.text_field :admin
        / = f.submit id: 'submit', class: 'button success small'
        = f.submit id: 'update-submit', class: 'button success small hidden', value: 'Update User'
    .large-9.columns
      %table
        %thead
          %tr
            %th Name
            %th Email
            %th.hidden Password
            %th Phone Number
            %th Address
            %th Address 2
            %th City
            %th State
            %th Zip 
            %th Delete
            %th Edit
        %tbody
          = render partial: 'users/partials/users'

- if !current_user.admin?
  %h2 Sorry, you are not authorized to view this page.

= javascript_include_tag 'user' 
