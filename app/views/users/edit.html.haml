.row
  .large-12.column
    %h2 Edit Your Info:
    (Note: All fields are required)
    %br
    %br
    %br
    = form_for @user do |f|
      = f.label :name
      = f.text_field :name
      / = f.label :vendor
      / = f.text_field :vendor
      / = f.label :admin
      / = f.text_field :admin
      = f.label :email
      = f.text_field :email 
      = f.label :password
      = f.text_field :password
      = f.label :phone_number 
      = f.text_field :phone_number
      = f.label :street_address 
      = f.text_field :street_address
      = f.label :street_address_2 
      = f.text_field :street_address_2
      = f.label :city 
      = f.text_field :city 
      = f.label :state
      = f.text_field :state 
      = f.label :zip
      = f.text_field :zip
      %br
      = f.submit id: 'submit', class: 'button success small', value: 'Update'