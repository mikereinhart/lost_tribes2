.row
  .large-4.columns
    %h1 Events
    - if current_user && (current_user.vendor? || current_user.admin?)
      = form_for @event, remote: true do |f|
        = f.label :title
        = f.text_field :title
        %br
        = f.label :date
        = f.text_field :date
        %br
        = f.label :street_address
        = f.text_field :street_address
        %br
        = f.label :street_address_2
        = f.text_field :street_address2
        %br
        = f.label :city
        = f.text_field :city
        %br
        = f.label :state
        = f.text_field :state
        %br
        = f.label :zip_code
        = f.text_field :zip_code
        %br
        = f.label :description
        = f.text_field :description
        %br
        = f.submit id: 'submit'
        = f.submit id: 'add-submit', class: 'hidden', value: 'Add to My Events'
        = f.submit id: 'event-update-submit', class: 'button success small', value: 'Update Events'
        %br
        %br

    / ===================================================================
  .large-8.columns
    - if current_user && !current_user.vendor?
      %br
      %br
      %br
      .event-display
      %button.hidden.small#add-to-user 
        =link_to("Register", register_event_path("#{'data-event-id'}"), method: :post, data: current_user)
    %br
    %br
    %br
    %br
    %br
    Download to: 
    =link_to "CSV | ", events_path(format: "csv") 
    =link_to "Excel", events_path(format: "xls") 
    %table#events
      %thead
        %tr
          %th
            Title
          %th
            Date
          %th.hidden
            Street
          %th.hidden
            Address 2
          %th
            City
          %th
            State
          %th.hidden 
            Zip Code
          %th.hidden
            Details
          - if user_signed_in? && current_user.admin?  
            %th
              Options
      %tbody
        - @events.each do |event|
          %tr{:'data-event-id' => event.id}
            %td.event_title
              = link_to event.title, event_path(event)
            %td.event_date
              = event.date
            %td.event_address.hidden
              = event.street_address
            %td.event_address_2.hidden
              = event.street_address2
            %td.event_city
              = event.city
            %td.event_state
              = event.state
            %td.event_zip.hidden
              = event.zip_code
            %td.event_description.hidden
              = event.description
            - if user_signed_in? && current_user.admin?
              %td
                = link_to 'Delete', '#', class: 'event-delete'
                = link_to 'Edit', '#', class: 'event-edit'


    = javascript_include_tag 'events'
