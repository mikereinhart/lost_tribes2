New Event Page

= form_for @event, remote: true do |f|
  = f.label :title
  = f.text_field :title
  %br
  = f.label :date
  = f.text_field :date
  %br
  = f.label :street_address
  = f.text_field :street_address
  %br
  = f.label :street_address2
  = f.text_field :street_address2
  %br
  = f.label :city
  = f.text_field :city
  %br
  = f.label :state
  = f.text_field :state
  %br
  = f.label :zip_code
  = f.text_field :zip_code
  %br
  = f.label :description
  = f.text_field :description
  %br
  = f.submit id: 'submit'
  = f.submit id: 'add-submit', class: 'hidden', value: 'Add to My Events'

%br
%br
%br
%br


%table#events
  %thead
    %tr
      %th
        Title
      %th
        date
      %th
        street
      %th
        street 2
      %th
        Date
      %th 
        City
      %th 
        State
  %tbody
    - @events.each do |event|
      %tr{:'data-event-id' => event.id}
        %td.title
          = link_to event.title, event_path(event)
        %td.date
          = event.date
        %td.street_address
          = event.street_address
        %td.street_address_2
          = event.street_address2
        %td.city
          = event.city
        %td.state
          = event.state
        %td.zip
          = event.zip_code
        %td.description
          = event.description

        %td
          = link_to 'Delete', '#', class: 'event-delete'
          = link_to 'Edit', '#', class: 'event-edit'


= javascript_include_tag 'events'
