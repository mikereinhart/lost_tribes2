.row
  .large-4.columns
    %h1 Events
    - if current_user && (current_user.vendor? || current_user.admin?)
      = form_for @event, remote: true do |f|
        = f.label :title
        = f.text_field :title
        %br
        = f.label :date
        = f.text_field :date
        %br
        = f.label :street_address
        = f.text_field :street_address
        %br
        = f.label :street_address_2
        = f.text_field :street_address2
        %br
        = f.label :city
        = f.text_field :city
        %br
        = f.label :state
        = f.text_field :state
        %br
        = f.label :zip_code
        = f.text_field :zip_code
        %br
        = f.label :description
        = f.text_field :description
        %br
        = f.submit id: 'submit', class: 'button success small'
        = f.submit id: 'add-submit', class: 'hidden', value: 'Add to My Events'
        = f.submit id: 'event-update-submit', class: 'button success small hidden', value: 'Update Event'
        %br
        %br

    / ===================================================================
  .large-8.columns
    %br
    %br
    %br
    %br
    %br
    %br
    %br
    %br
    Download to: 
    =link_to "CSV | ", events_path(format: "csv") 
    =link_to "Excel", events_path(format: "xls") 
    %table#events
      %thead
        %tr
          %th
            Title
          %th
            Date
          %th.hidden
            Street
          %th.hidden
            Address 2
          %th
            City
          %th
            State
          %th.hidden 
            Zip Code
          %th.hidden
            Details
          - if user_signed_in? && current_user.admin?  
            %th
              Options
      %tbody
        = render partial: '/events/partials/events'
    - if current_user && !current_user.vendor?
      .event-display
      %button.hidden.small#add-to-user 
        =link_to("Register", register_event_path("#{'data-event-id'}"), method: :post, data: current_user)


    = javascript_include_tag 'events'
